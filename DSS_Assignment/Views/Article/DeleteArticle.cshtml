@model Article
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>@ViewBag.DeleteStatus</h1>

@if (ViewBag.DeleteStatus != null && ViewBag.DeleteStatus != "Your article has been successfully deleted!")
{
    <a asp-controller="Auth" asp-action="Login" class="btn btn-primary my-2">Login</a>
    <a asp-controller="Auth" asp-action="Register" class="btn btn-secondary my-2">Register</a>
}

@if (Model != null)
{
    <div class="col-md-4">
        <div class="card mb-4 box-shadow">
            <img class="card-img-top" src="@Model.Image" alt="Card image cap">
            <div class="card-body">
                <p class="card-text">@Model.Title</p>
                <p class="card-text">@Model.Body</p>
            </div>
        </div>
    </div>
}