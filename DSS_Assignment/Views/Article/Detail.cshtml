@{
}


<div class="container">

    <h1 class="my-4">
        @Model.Title
    </h1>

    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="@Model.Image" alt="">
        </div>

        <div class="col-md-4">
            <p>@Model.Body</p>
			<a type="btn btn-success" asp-controller="Comment" asp-action="ShowArticleComments" asp-route-id="@Model.Id" type="button" class="btn btn-sm btn-outline-secondary" style="background-color:orange">View the comments</a>

        </div>

    </div>
</div>