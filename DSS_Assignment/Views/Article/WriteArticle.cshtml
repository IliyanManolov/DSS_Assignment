@model Article
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if (ViewBag.UserError != null)
{
    <h2>@ViewBag.UserError</h2>
    <p>
        <a asp-controller="Auth" asp-action="Login" class="btn btn-primary my-2">Login</a>
        <a asp-controller="Auth" asp-action="Register" class="btn btn-secondary my-2">Register</a>
    </p>
}

<form method="post" asp-action="WriteArticle">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="A nice and unique title">
    </div>
    <div class="form-group">
        <label asp-for="Image">Image link</label>
        <input asp-for="Image" class="form-control" placeholder="Link">
    </div>
    <div class="form-group">
        <label asp-for="Body">Article text</label>
        <input asp-for="Body" class="form-control" placeholder="A nice and unique article">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>