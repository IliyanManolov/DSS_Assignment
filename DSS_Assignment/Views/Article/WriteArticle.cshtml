@{
}

<form method="post" asp-action="WriteArticle">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="A nice and unique title">
    </div>
    <div class="form-group">
        <label asp-for="Image">Image link</label>
        <input asp-for="Image" class="form-control" placeholder="Link">
    </div>
    <div class="form-group">
        <label asp-for="Body">Article text</label>
        <input asp-for="Body" class="form-control" placeholder="A nice and unique article">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>