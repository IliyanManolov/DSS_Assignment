@model Comment
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>@ViewBag.DeleteStatus</h1>

@if (ViewBag.DeleteStatus != null && ViewBag.DeleteStatus != "Your comment has been successfully deleted!")
{
    <a asp-controller="Auth" asp-action="Login" class="btn btn-primary my-2">Login</a>
    <a asp-controller="Auth" asp-action="Register" class="btn btn-secondary my-2">Register</a>
}


<div class="comment mt-4 text-justify float-left">
    <span>@Model.Created.ToString("MM/dd/yyyy hh:mm tt")</span>
    <br>
    <p>@Model.Body</p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary my-2">Home</a>
</div>
