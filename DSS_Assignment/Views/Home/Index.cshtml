@model IEnumerable<Article>

@{
    ViewData["Title"] = "Home Page";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">ElephantMama</h1>
        <p class="lead text-muted">Helpful tips and tricks for mothers raising their elephant children by other mothers.</p>
        <p>
            <a asp-controller="Auth" asp-action="Login" class="btn btn-primary my-2">Login</a>
            <a href="#" class="btn btn-secondary my-2">Register</a>
        </p>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
			@foreach (var article in Model)
			{
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" src="@article.Image" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text">@article.Title</p>
                        <p class="card-text">@article.Body</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a type="btn btn-success" asp-controller="Article" asp-action="Detail" asp-route-id="@article.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                <a type="btn btn-success" asp-controller="Comment" asp-action="WriteComment" asp-route-id="@article.Id" type="button" class="btn btn-sm btn-outline-secondary">Comment</a>
                                <a type="btn btn-success" asp-controller="Comment" asp-action="ShowAllComments" typeof="button" class="btn btn-sm btn-outline-secondary">Comments</a>
                            </div>
                          @*  <small class="text-muted">@article.</small>*@
                        </div>
                    </div>
                </div>
            </div>
			}
        </div>
    </div>
</div>

